		<popup id="pop_reparto" width="250px" sclass="rounded">
			<grid sclass="vgrid" hflex="true" vflex="true">
				<rows>
					<row>
						<field value="Reparto:" />
						<label value="@load(vm.dto.numeroReparto)"></label>
					</row>
					<row>
						<field value="Repartidor:" />
						<label value="@load(vm.dto.repartidor)"></label>
					</row>
					<row>
						<field value="Entrega:" />
